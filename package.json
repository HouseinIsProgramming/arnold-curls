{
  "name": "@housein_isprogramming/arnold-curls",
  "version": "2.0.0",
  "description": "GraphQL API flow runner with multi-set support - execute flows step-by-step with context passing",
  "type": "module",
  "scripts": {
    "arnold": "node dist/arnold.js",
    "dev": "bun src/arnold.ts",
    "test": "bun test",
    "build": "bun build src/arnold.ts --outfile dist/arnold.js --target node",
    "build:standalone": "mkdir -p bin && bun build src/arnold.ts --compile --outfile bin/arnold",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "arnold": "dist/arnold.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "graphql",
    "api",
    "flow",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20"
  }
}
